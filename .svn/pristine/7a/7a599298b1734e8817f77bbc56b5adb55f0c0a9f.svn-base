  <body class=""> 
	<c:import url="/framework.jsp"></c:import>
	<div class="content">
		<div class="header">
			<div class="stats">
				<p class="stat">
					<span class="number">15</span>日
				</p>
				<p class="stat">
					<span class="number">08</span>月
